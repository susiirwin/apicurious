<div class="container">
  <h2>Hello, <%= @githubuser.name %>! Welcome to SusiHub!</h2>
</div>
<div class="container">
  <div class="jumbotron">
      <div class="row">
        <div class="col-md-6">
          <h3>Your Information</h3>
          <h4>Name: <%= @githubuser.name %></h4>
          <h4>Username: <%= @githubuser.login_name %></h4>
          <h4>Bio: <%= @githubuser.bio %></h4>
          <h4>Email: <%= @githubuser.email %></h4>
          <h4>Blog: <%= link_to "#{@githubuser.blog}", @githubuser.blog %></h4>
          <h4>Following: <%= @githubuser.number_following %></h4>
          <h4>Followers: <%= @githubuser.number_of_followers %></h4>
          <h3><%= link_to "See Your Recent Commits", commits_path %></h3>
          <h3><%= link_to "View Your Repos", repos_path %></h3>
        </div>
        <div class="col-md-4"><%= image_tag @githubuser.profile_pic %></div>
      </div>
    </div>

</div>

<div class="container">
  <%= link_to "Log out", logout_path %>
</div>
